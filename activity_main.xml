<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sol_tv"
        android:textSize="32dp"
        android:textAlignment="textEnd"
        android:layout_margin="16dp"
        android:textColor="@color/black"
        android:layout_above="@+id/res_tv"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="64dp"
        android:textColor="@color/black"
        android:layout_margin="16dp"
        android:layout_above="@+id/Button_l"
        android:textAlignment="textEnd"
        android:id="@+id/res_tv"
        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:id="@+id/Button_l">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:layout_margin="12dp"
            android:text="C"
            android:textSize="36dp"
            android:backgroundTint="#00796B"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:id="@+id/BTC"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:layout_margin="12dp"
            android:text="("
            android:backgroundTint="#9C9797"
            android:textSize="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:id="@+id/BTv"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:layout_margin="12dp"
            android:text=")"
            android:backgroundTint="#9F9B9B"
            android:textSize="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:id="@+id/BTb"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:layout_margin="12dp"
            android:text="/"
            android:textSize="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:id="@+id/BTo"
            android:backgroundTint="#FFA000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:layout_margin="12dp"
            android:text="7"
            android:textSize="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:id="@+id/BT7"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:layout_margin="12dp"
            android:text="8"
            android:textSize="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:id="@+id/BT8"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:layout_margin="12dp"
            android:text="9"
            android:textSize="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:id="@+id/BT9"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:layout_margin="12dp"
            android:text="*"
            android:textSize="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:id="@+id/BTO"
            android:backgroundTint="#FFA000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:layout_margin="12dp"
            android:text="4"
            android:textSize="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:id="@+id/BTf"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:layout_margin="12dp"
            android:text="5"
            android:textSize="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:id="@+id/BTfi"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:layout_margin="12dp"
            android:text="6"
            android:textSize="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:id="@+id/BTsi"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:layout_margin="12dp"
            android:text="+"
            app:backgroundTint="#FFA000"
            android:textSize="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:id="@+id/BTp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:layout_margin="12dp"
            android:text="1"
            android:textSize="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:id="@+id/BT1"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:layout_margin="12dp"
            android:text="2"
            android:textSize="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:id="@+id/BT2"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:layout_margin="12dp"
            android:text="3"
            android:textSize="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:id="@+id/BT3"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:layout_margin="12dp"
            android:text="-"
            android:textSize="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:id="@+id/BTm"
            android:backgroundTint="#FFA000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:layout_margin="12dp"
            android:text="AC"
            android:textSize="18dp"
            app:backgroundTint="#E31515"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:id="@+id/BTAC"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:layout_margin="12dp"
            android:text="0"
            android:textSize="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:id="@+id/BTZ"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:layout_margin="12dp"
            android:text="."
            android:textSize="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:id="@+id/BTM"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:layout_margin="12dp"
            android:text="="
            android:textSize="36dp"
            style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
            android:id="@+id/BTe"
            android:backgroundTint="#FFA000"/>
    </LinearLayout>

</LinearLayout>


</RelativeLayout>

